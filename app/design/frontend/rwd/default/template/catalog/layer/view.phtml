    function filtrado(){
        var minimo=document.getElementById("amountmin").value;
        minimo.substring(0,minimo.length);
        var maximo=document.getElementById("amountmax").value;
        var ubicacionActual=location.href+"&price=";
        location.href = ubicacionActual+minimo.substring(0,minimo.length-1)+"-"+maximo.substring(0,minimo.length);
